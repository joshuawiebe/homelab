# auto_backup/.env.sample

# USB configuration
USB_DEVICE=/dev/sda1
BACKUP_USB_LABEL=BACKUP_USB
BACKUP_MOUNT=/mnt/backup_usb

# Backup source
BACKUP_SRC=/

# Borg repo and passphrase
BORG_REPO=/mnt/backup_usb/borgrepo
BORG_PASSPHRASE=changeme

# Log file (kept in auto_backup folder, not on backup drive)
LOG_FILE=/path/to/homelab/auto_backup/backup.log

# Time for daily backup
BACKUP_TIME=02:00:00

# Systemd service name
SERVICE_NAME=auto-backup

# Default proxy for automation (traefik or zoraxy)
DEFAULT_PROXY=traefik
